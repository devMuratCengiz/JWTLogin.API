@model ConfirmMailDto
@{
    Layout = null;
}

<div class="container">
    <br />
    <br />
    <form method="post">
        <h2>Mail Adresi: @ViewBag.v</h2>
        <br />
        <input type="hidden" class="form-control" asp-for="Email" value="@ViewBag.v" />
        <br />
        <label>Mail Adresinize Gelen 6 Haneli Kodu Giriniz</label>
        <input type="text" class="form-control" asp-for="ConfirmCode" />
        <br />
        <button class="btn btn-primary">Hesabı Aktifleştir</button>
    </form>
</div>


